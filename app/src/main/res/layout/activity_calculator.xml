<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a00954431.ca.bcit.comp3717.calculator.Calculator">


    <Button
        android:text="clr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_no0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_clear"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_no6"
        android:layout_toRightOf="@+id/btn_no3"
        android:layout_toEndOf="@+id/btn_no3"
        android:id="@+id/btn_subtract"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:layout_alignBaseline="@+id/btn_no3"
        android:layout_alignBottom="@+id/btn_no3"
        android:layout_toRightOf="@+id/btn_no3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_divide"
        android:layout_toRightOf="@+id/btn_no3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_clear"
        android:layout_toEndOf="@+id/btn_clear" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no1"
        android:layout_alignBottom="@+id/btn_no1"
        android:layout_toRightOf="@+id/btn_no1"
        android:layout_toEndOf="@+id/btn_no1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no2"
        android:layout_alignBottom="@+id/btn_no2"
        android:layout_toRightOf="@+id/btn_no2"
        android:layout_toEndOf="@+id/btn_no2" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no4"
        android:layout_alignBottom="@+id/btn_no4"
        android:layout_toRightOf="@+id/btn_no1"
        android:layout_toEndOf="@+id/btn_no1" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no4"
        android:layout_alignBottom="@+id/btn_no4"
        android:layout_toRightOf="@+id/btn_no2"
        android:layout_toEndOf="@+id/btn_no2" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no7"
        android:layout_alignBottom="@+id/btn_no7"
        android:layout_toRightOf="@+id/btn_clear"
        android:layout_toEndOf="@+id/btn_clear" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/btn_divide"
        android:layout_toRightOf="@+id/btn_no0"
        android:layout_toEndOf="@+id/btn_no0" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/btn_clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_multi"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/btn_no9"
        android:layout_alignBottom="@+id/btn_no9"
        android:layout_toRightOf="@+id/btn_no9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/btn_no8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/btn_no4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_equals"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_no0"
        android:layout_below="@+id/btn_no9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
